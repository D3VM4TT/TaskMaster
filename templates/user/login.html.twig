{% extends 'layout/auth/index.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Please sign in
        </h1>
        <form method="post" class="space-y-4 md:space-y-6">
            {% if error %}
                <div class="text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <label for="inputEmail" class="block text-sm font-medium text-gray-700 dark:text-white">
                Email
            </label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                   class="w-full px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                   autocomplete="email" required autofocus>
            <label for="inputPassword" class="block mt-3 text-sm font-medium text-gray-700 dark:text-white">
                Password
            </label>
            <input type="password" name="password" id="inputPassword"
                   class="w-full px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                   autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                    type="submit">
                Sign in
            </button>
            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                Forgot your password?
                <a href="{{ path('app_forgot_password_request') }}"
                   class="font-bold text-primary-600 hover:underline dark:text-primary-500">
                    Reset Password
                </a>
            </p>
            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                Dont have an account?
                <a href="{{ path('app_register') }}"
                   class="font-bold text-primary-600 hover:underline dark:text-primary-500">
                    Register
                </a>
            </p>
        </form>
    </div>
{% endblock %}
