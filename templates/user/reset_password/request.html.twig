{% extends 'layout/auth/index.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="text-red-600">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Reset your password
        </h1>
        <form method="post" class="space-y-4 md:space-y-6">
            {{ form_start(requestForm) }}
            <div class="mb-3">
                {{ form_row(requestForm.email, {
                    'label': 'Email',
                    'attr': {'class': 'w-full px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'},
                }) }}
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
                Enter your email address, and we will send you a link to reset your password.
            </div>
            <button class="w-full px-4 py-2 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                    type="submit">
                Send password reset email
            </button>
            {{ form_end(requestForm) }}
        </form>
    </div>
{% endblock %}

